<BaseLayout>:
    orientation: "vertical"


<MenuWidget>:
    orientation: "horizontal"
    size_hint: 1, 0.1

    Button:
        text: "Home"
        on_press: self.parent.load_home()
    Button:
        text: "Categories"
        on_press: self.parent.load_categories()
    Button:
        text: "Favourites"
        on_press: self.parent.load_favourites()
    Button:
        text: "Settings"
        on_press: self.parent.load_settings()


<ItemsScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.05

            Label:
                text: "Items"

            Button:
                text: "Refresh"
                on_press: root.refresh_items()

        ItemsWidget:
            orientation: "vertical"
            size_hint: 1, 0.95



<CategoriesScreen>:
    BoxLayout:
        orientation: "vertical"

        Button:
            text: "Categories"


<FavouritesScreen>:
    BoxLayout:
        orientation: "vertical"

        Button:
            text: "Favourites"


<SettingsScreen>:
    BoxLayout:
        orientation: "vertical"

        Button:
            text: "Settings"
